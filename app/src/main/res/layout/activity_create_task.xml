<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taskScreens.CreateTaskActivity"
    android:background="@color/black"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
        >
            <ImageView
                android:id="@+id/arrowLeft"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/arrowleft"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Nueva Actividad"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/arrowLeft"
                app:layout_constraintTop_toTopOf="@+id/arrowLeft"
                app:layout_constraintBottom_toBottomOf="@+id/arrowLeft"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/createName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Titulo"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:backgroundTint="@color/black"
        />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/gray"
            android:layout_marginBottom="10dp"
        />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <ImageView
                android:id="@+id/todoElDia"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/playicon"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todo el dia"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/todoElDia"
                android:layout_marginStart="20dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingVertical="5dp"
            />
            <Switch
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="80dp"
                android:layout_height="30dp"
                tools:ignore="UseSwitchCompatOrMaterialXml"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/gray"
            android:layout_marginVertical="10dp"
            />

        <EditText
            android:id="@+id/createDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Fecha"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:backgroundTint="@color/black"
            />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/gray"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Correo asociado"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:backgroundTint="@color/black"
            />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/gray"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="No repetir"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:backgroundTint="@color/black"
            />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/gray"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Prioridad"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:backgroundTint="@color/black"
            />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/gray"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/createDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Notas"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:backgroundTint="@color/black"
            />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/gray"
            android:layout_marginBottom="10dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/purplebar"
            app:cardCornerRadius="15dp"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            >
            <Button
                android:layout_width="170dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Cancelar"
                android:textSize="20sp"
                android:backgroundTint="@color/purplebar"
                app:cornerRadius="15dp"
            />
            <com.google.android.material.divider.MaterialDivider
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                app:dividerColor="@color/darkgray"
            />
            <Button
                android:id="@+id/btnCreateTask"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Guardar"
                android:textSize="20sp"
                android:backgroundTint="@color/purplebar"
                app:cornerRadius="15dp"
            />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>