<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taskScreens.CreateTaskActivity"
    android:background="@color/black"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
        >
            <ImageView
                android:id="@+id/arrowLeft"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/arrowleft"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
            />
            <TextView
                android:id="@+id/headerScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Crear Nueva Actividad"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/title_bold_big"
                android:textAlignment="center"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkpurple"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="15dp"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
            >
                <EditText
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/dividertitle"
                    android:id="@+id/createName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="17sp"
                    android:hint="Titulo"
                    android:textColor="@color/white"
                    android:textColorHint="@color/darkgray"
                    android:backgroundTint="@color/darkpurple"
                    style="@style/text_normal_white"
                    />
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/dividertitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/darkgray"
                />
                <EditText
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dividertitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/createUbication"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="17sp"
                    android:hint="Ubicacion"
                    android:textColor="@color/white"
                    android:textColorHint="@color/darkgray"
                    android:backgroundTint="@color/darkpurple"
                    style="@style/text_normal_white"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkpurple"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="15dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:paddingVertical="10dp"
                >
                <TextView
                    android:id="@+id/labelSwitch"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/allDaySwitch"
                    app:layout_constraintBottom_toBottomOf="@+id/allDaySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todo el dia"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/psregular"
                />
                <Switch
                    android:id="@+id/allDaySwitch"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/dividerDateStart"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    tools:ignore="UseSwitchCompatOrMaterialXml"
                />
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/dividerDateStart"
                    app:layout_constraintTop_toBottomOf="@+id/allDaySwitch"
                    app:layout_constraintBottom_toTopOf="@+id/dateStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/darkgray"
                    android:layout_marginVertical="10dp"
                    />
                <TextView
                    android:id="@+id/dateStart"
                    app:layout_constraintTop_toBottomOf="@id/dividerDateStart"
                    app:layout_constraintBottom_toBottomOf="@+id/dividerDateEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Empieza"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/psregular"
                />
                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toBottomOf="@id/dividerDateStart"
                    app:layout_constraintBottom_toBottomOf="@+id/dividerDateEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="5dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/purplebar"
                >
                    <TextView
                        android:id="@+id/dateStartPicker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="01/01/2000"
                        android:textColorHint="@color/darkgray"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/psregular"
                        android:textAlignment="center"
                    />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toBottomOf="@id/dividerDateStart"
                    app:layout_constraintBottom_toBottomOf="@+id/dividerDateEnd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="5dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/purplebar"
                    >
                    <TextView
                        android:id="@+id/hourStartPicker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="00:00"
                        android:textColorHint="@color/darkgray"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/psregular"
                        android:textAlignment="center"
                        />
                </androidx.cardview.widget.CardView>
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/dividerDateEnd"
                    app:layout_constraintTop_toBottomOf="@+id/dateStart"
                    app:layout_constraintBottom_toTopOf="@+id/dateEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/darkgray"
                    android:layout_marginVertical="10dp"
                    />
                <TextView
                    android:id="@+id/dateEnd"
                    app:layout_constraintTop_toBottomOf="@id/dividerDateEnd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Termina"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/psregular"
                    />
                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toBottomOf="@+id/dividerDateEnd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="5dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/purplebar"
                    android:layout_marginTop="10dp"
                >
                    <TextView
                        android:id="@+id/dateEndPicker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="01/01/2000"
                        android:textColorHint="@color/darkgray"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/psregular"
                        android:textAlignment="center"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toBottomOf="@id/dividerDateEnd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="5dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/purplebar"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/hourEndPicker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="00:00"
                        android:textColorHint="@color/darkgray"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/psregular"
                        android:textAlignment="center"
                        />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkpurple"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="15dp"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:paddingVertical="10dp"
            >
                <TextView
                    android:id="@+id/labelPriority"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/definePriority"
                    app:layout_constraintBottom_toBottomOf="@+id/definePriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/psregular"
                    android:text="@string/prioridad"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                />
                <Spinner
                    android:id="@+id/definePriority"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/darkpurple"
            app:cardCornerRadius="15dp"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
            >
                <EditText
                    android:id="@+id/bindEmail"
                    style="@style/text_normal_white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/darkpurple"
                    android:hint="@string/correo"
                    android:textColor="@color/white"
                    android:textColorHint="@color/darkgray"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@+id/dividerNotes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                />
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/dividerNotes"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/darkgray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bindEmail"
                />
                <EditText
                    android:id="@+id/bindNotes"
                    style="@style/text_normal_white"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/darkpurple"
                    android:gravity="top"
                    android:hint="@string/notas"
                    android:textColor="@color/white"
                    android:textColorHint="@color/darkgray"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dividerNotes"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/purplebar"
            app:cardCornerRadius="15dp"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            >
            <Button
                android:layout_width="170dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Cancelar"
                android:textSize="20sp"
                android:backgroundTint="@color/purplebar"
                app:cornerRadius="15dp"
            />
            <com.google.android.material.divider.MaterialDivider
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                app:dividerColor="@color/darkgray"
            />
            <Button
                android:id="@+id/btnCreateTask"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Guardar"
                android:textSize="20sp"
                android:backgroundTint="@color/purplebar"
                app:cornerRadius="15dp"
            />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>