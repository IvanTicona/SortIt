<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taskScreens.EditTaskActivity"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:contentDescription="@string/arrow_to_exit"
                android:id="@+id/arrowLeft"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/arrowleftn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/headerScreen"
                style="@style/title_bold_big"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/editar_actividad"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textAlignment="center"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp">

                <EditText
                    android:id="@+id/createName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/titulo"
                    app:layout_constraintBottom_toBottomOf="@+id/dividertitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/text_normal"
                    />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/dividertitle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/darkgray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/createUbication"
                    style="@style/text_normal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/ubicacion"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dividertitle"
                    android:inputType="text"
                    android:autofillHints=""/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/labelSwitch"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/allDaySwitch"
                    app:layout_constraintBottom_toBottomOf="@+id/allDaySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/todo_el_dia"
                    style="@style/text_normal"
                    />

                <Switch
                    android:id="@+id/allDaySwitch"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/dividerDateStart"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    tools:ignore="UseSwitchCompatOrMaterialXml"
                    />
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/dividerDateStart"
                    app:layout_constraintTop_toBottomOf="@+id/allDaySwitch"
                    app:layout_constraintBottom_toTopOf="@+id/dateStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/darkgray"
                    android:layout_marginVertical="10dp"/>

                <TextView
                    android:id="@+id/dateStart"
                    app:layout_constraintTop_toBottomOf="@id/dividerDateStart"
                    app:layout_constraintBottom_toBottomOf="@+id/dividerDateEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/empieza"
                    style="@style/text_normal"

                    />
                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toBottomOf="@id/dividerDateStart"
                    app:layout_constraintBottom_toBottomOf="@+id/dividerDateEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="5dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/purplebar"
                    >
                    <TextView
                        android:id="@+id/dateStartPicker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/sample_date"
                        android:textColorHint="@color/darkgray"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/psregular"
                        android:textAlignment="center"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toBottomOf="@id/dividerDateStart"
                    app:layout_constraintBottom_toBottomOf="@+id/dividerDateEnd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="5dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/purplebar"
                    >
                    <TextView
                        android:id="@+id/hourStartPicker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/sample_time"
                        android:textColorHint="@color/darkgray"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/psregular"
                        android:textAlignment="center"
                        />
                </androidx.cardview.widget.CardView>
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/dividerDateEnd"
                    app:layout_constraintTop_toBottomOf="@+id/dateStart"
                    app:layout_constraintBottom_toTopOf="@+id/dateEnd"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/darkgray"
                    android:layout_marginVertical="10dp"/>

                <TextView
                    android:id="@+id/dateEnd"
                    app:layout_constraintTop_toBottomOf="@id/dividerDateEnd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/termina"
                    style="@style/text_normal"

                    />
                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toBottomOf="@+id/dividerDateEnd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="5dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/purplebar"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/dateEndPicker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/sample_date"
                        android:textColorHint="@color/darkgray"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/psregular"
                        android:textAlignment="center"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toBottomOf="@id/dividerDateEnd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="5dp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/purplebar"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/hourEndPicker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/sample_time"
                        android:textColorHint="@color/darkgray"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/psregular"
                        android:textAlignment="center"
                        />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="15dp"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:paddingVertical="10dp"
            >
                <TextView
                    android:id="@+id/labelPriority"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/definePriority"
                    app:layout_constraintBottom_toBottomOf="@+id/definePriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prioridad"
                    style="@style/text_normal"

                    />
                <Spinner
                    android:id="@+id/definePriority"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="15dp"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp">

                <EditText
                    android:id="@+id/bindEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/darkpurple"
                    android:hint="@string/correo"
                    style="@style/text_normal"
                    app:layout_constraintBottom_toBottomOf="@+id/dividerNotes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                />
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/dividerNotes"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="@color/darkgray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bindEmail"
                />
                <EditText
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dividerNotes"
                    android:id="@+id/bindNotes"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textSize="17sp"
                    android:hint="@string/notas"
                    style="@style/text_normal"
                    android:gravity="top"
                    android:inputType="text"
                    android:autofillHints=""/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/purplebar"
            app:cardCornerRadius="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/purplebar"
                    android:text="@string/cancelar"
                    android:textSize="20sp"
                    app:cornerRadius="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    app:dividerColor="@color/darkgray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnCreateTask"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/purplebar"
                    android:text="@string/guardar"
                    android:textSize="20sp"
                    app:cornerRadius="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>