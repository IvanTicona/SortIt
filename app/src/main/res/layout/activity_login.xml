<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginScreens.LoginActivity"
>

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/app_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fields"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/sortiticon"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fields"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <ImageView
            android:contentDescription="@string/google_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="@id/button_log_google"
            app:layout_constraintTop_toTopOf="@id/button_log_google"
            app:layout_constraintBottom_toBottomOf="@id/button_log_google"
            android:src="@drawable/googleicon"
            android:elevation="2dp"
            android:layout_marginStart="25dp"
        />
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/button_log_google"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/continuar_con_google"
            app:cornerRadius = "15dp"
            android:textSize="20sp"
        />
        <ImageView
            android:contentDescription="@string/mail_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="@id/button_log_correo"
            app:layout_constraintTop_toTopOf="@id/button_log_correo"
            app:layout_constraintBottom_toBottomOf="@id/button_log_correo"
            android:src="@drawable/emailicon"
            android:elevation="2dp"
            android:layout_marginStart="25dp"
        />
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/button_log_correo"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/purplebar"
            app:layout_constraintTop_toBottomOf="@+id/button_log_google"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/continuar_con_correo"
            app:cornerRadius = "15dp"
            android:textSize="20sp"
        />

        <Button
            android:id="@+id/button_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/crear_cuenta"
            app:layout_constraintTop_toBottomOf="@+id/button_log_correo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/text_semibold"
/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>