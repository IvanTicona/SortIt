<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/black"
    android:animateLayoutChanges="true"
    android:layout_marginBottom="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
    >
        <com.google.android.material.divider.MaterialDivider
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:dividerColor="@color/darkgray"
        />
        <androidx.cardview.widget.CardView
            android:id="@+id/calendarImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="@color/green"
        >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/calendarn"
                android:layout_gravity="center"
            />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textViewTaskTitle"
            app:layout_constraintStart_toEndOf="@+id/calendarImg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/psbold"
            android:textColor="@color/white"
        />
        <TextView
            android:id="@+id/textViewTaskDate"
            app:layout_constraintEnd_toStartOf="@+id/deleteBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"
        />
        <androidx.cardview.widget.CardView
            android:id="@+id/deleteBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="@color/red"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/deleten"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
