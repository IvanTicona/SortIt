<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
>

    <!-- Cabecera -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/purplebar"
    >

        <!-- Botón Atrás -->
        <ImageButton
            android:id="@+id/btnAtras"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrowleft"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
        />

        <!-- TextView del Mes -->
        <TextView
            android:id="@+id/txtMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enero 2024"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
        />

        <!-- Botón Agregar Tarea -->
        <ImageButton
            android:id="@+id/btnAddTask"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/successicon"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
        />
    </LinearLayout>

    <!-- Línea de Días de la Semana -->
    <LinearLayout
        android:id="@+id/daysOfWeekLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:background="@color/purplebar"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Días de la Semana -->
        <!-- Puedes generar estos TextViews dinámicamente en el código si lo prefieres -->
        <TextView
            android:id="@+id/txtMon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Lun"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mar"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtWed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mié"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtThu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Jue"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFri"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Vie"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sáb"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSun"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Dom"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Contenedor para WeekFragment -->
    <FrameLayout
        android:id="@+id/weekFragmentContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor para DayFragment -->
    <FrameLayout
        android:id="@+id/dayFragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/weekFragmentContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
