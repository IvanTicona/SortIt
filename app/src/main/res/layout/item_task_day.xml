<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:backgroundTint="#CC92C4E9"
    android:id="@+id/cardTaskDay"
    android:layout_margin="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/borderStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:dividerColor="#0473B8"
            android:layout_width="5dp"
            android:layout_height="60dp"
            />
        <ImageView
            android:id="@+id/timeIcon"
            app:layout_constraintStart_toEndOf="@+id/borderStart"
            app:layout_constraintTop_toBottomOf="@+id/textTaskName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/timeicontask"
            />
        <TextView
            android:id="@+id/textTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/borderStart"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Task Name"
            android:textColor="#0473B8"
            android:textSize="15sp"
            android:fontFamily="@font/pssemibold"
            />
        <TextView
            android:id="@+id/textTimeStart"
            app:layout_constraintStart_toEndOf="@+id/timeIcon"
            app:layout_constraintTop_toTopOf="@+id/timeIcon"
            app:layout_constraintBottom_toBottomOf="@+id/timeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Start"
            android:textColor="#0473B8"
            android:textSize="12sp"
            android:fontFamily="@font/psregular"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/separator"
            app:layout_constraintTop_toTopOf="@+id/timeIcon"
            app:layout_constraintBottom_toBottomOf="@+id/timeIcon"
            app:layout_constraintStart_toEndOf="@+id/textTimeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textColor="#0473B8"
            android:textSize="12sp"
            android:fontFamily="@font/psregular"
            />
        <TextView
            android:id="@+id/textTimeEnd"
            app:layout_constraintStart_toEndOf="@+id/separator"
            app:layout_constraintTop_toTopOf="@+id/timeIcon"
            app:layout_constraintBottom_toBottomOf="@+id/timeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:textColor="#0473B8"
            android:textSize="12sp"
            android:fontFamily="@font/psregular"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>